{
  "id": "nhs-medical-records",
  "name": "View your NHS medical records",
  "landingPage": {
    "title": "View your NHS medical records online",
    "lead": "Access your GP medical records, test results, and prescriptions online.",
    "sections": [
      {
        "type": "heading",
        "content": "What you need",
        "level": "m"
      },
      {
        "type": "paragraph",
        "content": "You'll need your NHS number and date of birth to access your records."
      },
      {
        "type": "heading",
        "content": "What you can view",
        "level": "m"
      },
      {
        "type": "list",
        "listType": "bullet",
        "content": [
          "your medical history and conditions",
          "current and past prescriptions",
          "test results and reports",
          "upcoming appointments",
          "immunisation history"
        ]
      },
      {
        "type": "insetText",
        "content": "This service is free and secure. Your records are confidential."
      },
      {
        "type": "warningText",
        "content": "If you need urgent medical help, call 111 or 999. Do not use this service for emergencies."
      }
    ],
    "startButtonText": "Start now",
    "startButtonHref": "/nhs/nhs-medical-records/apply"
  },
  "startPage": "search",
  "pages": {
    "search": {
      "id": "search",
      "title": "Access your medical records",
      "components": [
        {
          "type": "paragraph",
          "props": {
            "text": "Enter your details to view your NHS medical records.",
            "lead": true
          }
        },
        {
          "type": "textInput",
          "props": {
            "id": "nhsNumber",
            "name": "nhsNumber",
            "label": "NHS number",
            "hint": "This is a 10 digit number, like 485 777 3456",
            "width": "10"
          }
        },
        {
          "type": "dateInput",
          "props": {
            "id": "dateOfBirth",
            "name": "dateOfBirth",
            "legend": "Date of birth",
            "hint": "For example, 31 3 1980"
          }
        },
        {
          "type": "insetText",
          "props": {
            "text": "We use this information to verify your identity and protect your medical records."
          }
        }
      ],
      "nextPage": "results",
      "validation": "nhs-records-search"
    },
    "results": {
      "id": "results",
      "title": "Your NHS medical records",
      "components": [
