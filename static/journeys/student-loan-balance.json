{
  "id": "student-loan-balance",
  "name": "Check student loan balance",
  "landingPage": {
    "title": "Check your student loan balance",
    "lead": "Find out how much you owe on your student loan and how much you've repaid.",
    "sections": [
      {
        "type": "heading",
        "content": "What you need",
        "level": "m"
      },
      {
        "type": "paragraph",
        "content": "You'll need your student loan customer reference number."
      },
      {
        "type": "heading",
        "content": "What you can view",
        "level": "m"
      },
      {
        "type": "list",
        "listType": "bullet",
        "content": [
          "your current loan balance",
          "how much you've repaid",
          "your repayment threshold",
          "interest charged on your loan",
          "when your loan will be written off"
        ]
      },
      {
        "type": "insetText",
        "content": "This service is free and takes less than a minute to use."
      }
    ],
    "startButtonText": "Start now",
    "startButtonHref": "/dfe/student-loan-balance/apply"
  },
  "startPage": "search",
  "pages": {
    "search": {
      "id": "search",
      "title": "Check your student loan balance",
      "components": [
        {
          "type": "paragraph",
          "props": {
            "text": "Enter your details to view your student loan balance.",
            "lead": true
          }
        },
        {
          "type": "textInput",
          "props": {
            "id": "customerReference",
            "name": "customerReference",
            "label": "Customer reference number",
            "hint": "This is on letters from Student Finance England. For example, SFE-2024-123456",
            "width": "20"
          }
        },
        {
          "type": "dateInput",
          "props": {
            "id": "dateOfBirth",
            "name": "dateOfBirth",
            "legend": "Date of birth",
            "hint": "For example, 31 3 1980"
          }
        }
      ],
      "nextPage": "results",
      "validation": "student-loan-search"
    },
    "results": {
      "id": "results",
      "title": "Your student loan balance",
      "components": [
