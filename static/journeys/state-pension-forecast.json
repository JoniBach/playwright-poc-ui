{
  "id": "state-pension-forecast",
  "name": "Check State Pension forecast",
  "landingPage": {
    "title": "Check your State Pension forecast",
    "lead": "Use this service to find out how much State Pension you could get and when you could get it.",
    "sections": [
      {
        "type": "heading",
        "content": "What you need",
        "level": "m"
      },
      {
        "type": "paragraph",
        "content": "You'll need your National Insurance number."
      },
      {
        "type": "heading",
        "content": "What you'll find out",
        "level": "m"
      },
      {
        "type": "list",
        "listType": "bullet",
        "content": [
          "how much State Pension you could get",
          "when you can get your State Pension",
          "how to increase your State Pension",
          "your National Insurance record"
        ]
      },
      {
        "type": "insetText",
        "content": "This service is free and takes less than 5 minutes to use."
      },
      {
        "type": "paragraph",
        "content": "You can also use this service to get a State Pension statement."
      }
    ],
    "startButtonText": "Start now",
    "startButtonHref": "/dwp/state-pension-forecast/apply"
  },
  "startPage": "search",
