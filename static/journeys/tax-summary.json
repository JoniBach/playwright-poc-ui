{
  "id": "tax-summary",
  "name": "View your tax summary and payments",
  "landingPage": {
    "title": "View your tax summary and payments",
    "lead": "Check your tax codes, payments and refunds online.",
    "sections": [
      {
        "type": "heading",
        "content": "What you need",
        "level": "m"
      },
      {
        "type": "paragraph",
        "content": "You'll need your Unique Taxpayer Reference (UTR) number."
      },
      {
        "type": "heading",
        "content": "What you can view",
        "level": "m"
      },
      {
        "type": "list",
        "listType": "bullet",
        "content": [
          "your current tax codes",
          "payments you've made to HMRC",
          "any refunds due to you",
          "your Self Assessment account balance",
          "upcoming payment deadlines"
        ]
      },
      {
        "type": "insetText",
        "content": "This service is free and secure. Your tax information is confidential."
      }
    ],
    "startButtonText": "Start now",
    "startButtonHref": "/hmrc/tax-summary/apply"
  },
  "startPage": "search",
