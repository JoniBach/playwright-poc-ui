          "type": "paragraph",
          "props": {
            "text": "Enter your details to view your tax summary and payments.",
            "lead": true
          }
        },
        {
          "type": "textInput",
          "props": {
            "id": "utr",
            "name": "utr",
            "label": "Unique Taxpayer Reference (UTR)",
            "hint": "This is 10 numbers, for example 1234567890",
            "width": "10"
          }
        },
        {
          "type": "textInput",
          "props": {
            "id": "nationalInsurance",
            "name": "nationalInsurance",
            "label": "National Insurance number",
            "hint": "For example, 'QQ 12 34 56 C'",
            "width": "10"
          }
        }
      ],
      "nextPage": "results",
      "validation": "tax-summary-search"
    },
